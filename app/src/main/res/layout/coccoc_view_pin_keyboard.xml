<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="NestedWeights">

    <!-- 1 2 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key1"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="1" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key2"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="2" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key3"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="3" />
    </LinearLayout>

    <!-- 4 5 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key4"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="4" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key5"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="5" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key6"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="6" />
    </LinearLayout>

    <!-- 7 8 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key7"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="7" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key8"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="8" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key9"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="9" />
    </LinearLayout>

    <!--   0 < -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <coccoc.pin.views.PinKeyNumberView
            android:id="@+id/key0"
            style="@style/PinKeyboardNumberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:value="0" />

        <coccoc.pin.views.PinKeyDelView
            android:id="@+id/keyDel"
            style="@style/PinKeyboardControlView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_keyboard_back" />
    </LinearLayout>
</LinearLayout>